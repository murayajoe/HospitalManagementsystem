<odoo>
    <template id="tic_tac_toe_template">
        <t t-call="web.layout">
            <t t-set="title">Tic Tac Toe</t>
            <div class="container">
                <h2>Tic-Tac-Toe</h2>
                <div id="gameBoard" class="board"></div>
                <p id="gameStatus">Current Player: <span id="currentPlayer">X</span></p>
                <button onclick="startNewGame()">New Game</button>
            </div>
        </t>
    </template>
</odoo>
