<odoo>
    <record id="view_tictactoe_list" model="ir.ui.view">
        <field name="name">tic.tac.toe.list</field>
        <field name="model">tic.tac.toe</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="player_x"/>
                <field name="player_o"/>
                <field name="winner"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_tictactoe_form" model="ir.ui.view">
        <field name="name">tic.tac.toe.form</field>
        <field name="model">tic.tac.toe</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="player_x"/>
                        <field name="player_o"/>
                        <field name="board" widget="text"/>
                        <field name="winner"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="tic_tac_toe_menu" name="Tic Tac Toe" sequence="10"/>

    <menuitem id="tic_tac_toe_games_menu" name="Games" parent="tic_tac_toe_menu" sequence="20" action="tic_tac_toe_action"/>

    <record id="tic_tac_toe_action" model="ir.actions.act_window">
        <field name="name">Tic-Tac-Toe Games</field>
        <field name="res_model">tic.tac.toe</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
