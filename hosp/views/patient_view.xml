<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <!-- Tree View -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml"> 
            <list>
                <field name="name" string="Patient Name"/>
                <field name="age" string="Age"/>
                <field name="gender" string="Gender"/>
                <field name="next_of_kin_name" string="next_of_kin_name"/>
                <field name="contact" string="contact"/>
                <field name="next_of_kin_contact" string="next_of_kin_contact"/>
                <field name="insurance" string= "insurance"/>
                <field name="identification_number" string="identification_number"/>
                <field name="weight" string="weight" />
                <!-- <field name="insurance_number" attrs"{'invisible':[('insurance','=','No')], 'required': [('insurance''=' 'Yes')]}"/> -->
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml"> 
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Patient Name"/>
                        <field name="age" string="Age"/>
                        <!-- <field name="next_of_kin_name"/>
                         <field name="contact"/>
                         <field name="next_of_kin_contact"/>
                         <field name="insurance"/>
                         <field name="identification_number"/>
                         <field name="weight"/>
                         <field name="insurance_number" attrs"{'invisible':[('insurance','=','No')], 'required': [('insurance''=' 'Yes')]}"/> -->
                    </group>
                    <group>
                        <field name="gender" string="Gender"/>
                    </group>
                </sheet>   
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_patient"
        name="Patient"
        parent="menu_patient_master"
        action="action_hospital_patient"
        sequence="2"/>
</odoo>
